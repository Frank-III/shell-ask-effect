{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "default_model": {
      "type": "string"
    },
    "openai_api_key": {
      "type": "string"
    },
    "openai_api_url": {
      "type": "string"
    },
    "anthropic_api_key": {
      "type": "string"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["input"]
                    },
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": ["type", "message"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["select"]
                    },
                    "choices": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "value": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          }
                        },
                        "required": ["value", "title"],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["type", "choices"],
                  "additionalProperties": false
                }
              ]
            }
          },
          "prompt": {
            "type": "string"
          }
        },
        "required": ["command", "prompt"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
